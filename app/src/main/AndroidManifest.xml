<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.intelliverse">

    <application
        android:name="com.example.intelliverse.IntelliverseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_intelliverse_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_intelliverse_launcher_round"
        tools:replace="android:icon,android:roundIcon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SchoolKiller">
        <activity
            android:name="com.example.intelliverse.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SchoolKiller">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>